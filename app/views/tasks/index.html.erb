<h1>TASKS :</h1>

<ol>
  <% @tasks.each  do |task| %>
  <li>
    <%= link_to task.title,
    task_path(task) %>
    <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ol>

<%= link_to 'create a new task', 'tasks/new' %>
